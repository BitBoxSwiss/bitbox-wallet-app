{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "jsxFactory": "h",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "removeComments": true,
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
